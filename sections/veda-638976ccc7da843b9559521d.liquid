{% assign uniqueId = 'id_3fc9c5fb-a126-430d-80e1-8944aaf6eb76' %}
{% assign builderMode = false %}
{% assign envatoMode = false %}
{% liquid
  if section.settings.VEDA_switch_1
    assign backgroundFixed = 'fixed'
  else
    assign backgroundFixed = 'scroll'
  endif

  if section.settings.VEDA_select_2 == 'color'
    assign backgroundColor = 'background-color: ' | append: section.settings.VEDA_color_1 | append: ';'
  else
    assign backgroundColor = ''
  endif

  if section.settings.VEDA_select_2 == 'image' and section.settings.VEDA_image_2
    assign bgImage = section.settings.VEDA_image_2 | append: '&width=2000'

    assign backgroundImage = 'background-image: url(' | append: bgImage | append: ');background-attachment: ' | append: backgroundFixed | append: ';background-size: ' | append: section.settings.VEDA_select_3 | append: ';'
  elsif section.settings.VEDA_select_2 == 'image' and section.settings.VEDA_image_2 == blank
    assign bgImage = 'https://cdn.shopify.com/s/files/1/0552/5510/5616/files/udxhtnzxtq.png?v=1681903122&width=1000'

    assign backgroundImage = 'background-image: url(' | append: bgImage | append: ');background-attachment: ' | append: backgroundFixed | append: ';background-size: ' | append: section.settings.VEDA_select_3 | append: ';'
  else
    assign backgroundImage = ''
  endif

  assign sectionPadding = 'padding-top: ' | append: section.settings.VEDA_space_4 | append: 'px;padding-right: ' | append: section.settings.VEDA_space_3 | append: 'px;padding-bottom: ' | append: section.settings.VEDA_space_1 | append: 'px;padding-left: ' | append: section.settings.VEDA_space_2 | append: 'px;'

  if section.settings.VEDA_select_1 == 'full_width'
    assign containerType = 'container-fluid'
  else
    assign containerType = 'container'
  endif

  if section.settings.VEDA_slider_1 >= 0
    assign containerGap = 'padding-left: ' | append: section.settings.VEDA_slider_1 | append: 'px; padding-right: ' | append: section.settings.VEDA_slider_1 | append: 'px;'
  else
    assign containerGap = ''
  endif

  if section.settings.section_settings___width >= 0
    assign containerWidth = 'max-width: ' | append: section.settings.section_settings___width | append: 'px;'
  else
    assign containerWidth = ''
  endif

  if section.settings.VEDA_slider_2 >= 0
    assign settingGap = section.settings.VEDA_slider_2 | divided_by: 2.0

    assign settingGapVertical = section.settings.VEDA_slider_2
  else
    assign settingGap = ''

    assign settingGapVertical = ''
  endif

  assign colGap = 'margin-top: ' | append: settingGapVertical | append: 'px; padding-left: ' | append: settingGap | append: 'px; padding-right: ' | append: settingGap | append: 'px;'

  assign rowGap = 'margin-top: -' | append: settingGapVertical | append: 'px; margin-left: -' | append: settingGap | append: 'px; margin-right: -' | append: settingGap | append: 'px;'

  assign sectionSeparator = ''

  if section.settings.VEDA_switch_3
    if section.settings.VEDA_slider_4
      assign sectionSeparator = sectionSeparator | append: 'border-top: ' | append: section.settings.VEDA_slider_4 | append: 'px solid ' | append: section.settings.VEDA_color_3 | append: ';'
    endif

    if section.settings.VEDA_slider_5
      assign sectionSeparator = sectionSeparator | append: 'border-bottom: ' | append: section.settings.VEDA_slider_5 | append: 'px solid ' | append: section.settings.VEDA_color_3 | append: ';'
    endif
  endif

  if colGap and rowGap and builderMode and envatoMode
  endif
%}

{% liquid
  assign _alt = false

  assign _style = false

  assign _placeholder = false

  assign _placeholder_class = false

  assign _component = false

  assign _container_class = false

  assign _label_class = false

  assign _class = false

  assign _placeholder = false

  assign _autocorrect = false

  assign _autocapitalize = false

  assign _data_confirm_message = false

  assign _data_target = false

  assign _aria_label = false

  assign _data_index = false

  assign _data_form_active = false

  assign _form = false

  assign _name = false

  assign _id = false

  assign _tooltip_text = false

  assign _data_button_video_id = false

  assign _gap = false

  assign _tooltip_position = false

  assign _test = false

  assign _icon_class = false
%}
{% capture Content %}
  {% liquid
    assign contentPadding = ''

    if section.settings.VEDA_switch_5
      if section.settings.VEDA_radioGroup_2 == 'left'
        assign contentPadding = ' pr:50px@md'
      else
        assign contentPadding = ' pl:50px@md'
      endif
    endif
  %}
  <div
    class="w:100%@+md! mih:100% d:flex fld:column jc:center{{ contentPadding }}"
    {% if section.settings.VEDA_radioGroup_2 == 'right' %}
      style="width: {{ section.settings["VEDA_slider_8"] }}%; order: 1;"
    {% else %}
      style="width: {{ section.settings["VEDA_slider_8"] }}%;"
    {% endif %}
  >
    {% for block in section.blocks %}
      {% assign contentItem = block.settings %}

      {% case block.type %}
        {% when 'content_article_title' %}
          <h2
            class="m:10px_0 fz:pfs(20px,35px) fw:500 c:color-gray9"
            data-css="{{ contentItem.VEDA_styleBox_2 }}"
          >
            {{ article.title }}
          </h2>
        {% when 'VEDA_array_1' %}
          <div
            class="mt:20px mr:10px fz:13px fw:400 c:color-gray9"
            data-css="{{ contentItem.VEDA_styleBox_2 }}"
          >
            {{ article.author }} â‹… {{ article.published_at | date: '%b %d, %Y' }}
          </div>
        {% when 'content_article_content' %}
          <div
            class="veda-content"
            data-css="{{ contentItem.VEDA_styleBox_2 }}"
          >
            {{ article.content }}
          </div>
        {% when 'content_article_image' %}
          {% liquid
            assign imageRadius = 0

            if contentItem.VEDA_slider_7
              assign imageRadius = contentItem.VEDA_slider_7
            endif
          %}
          {% if article.image.src != blank %}
            <div
              class="pos:relative d:block w:100%"
              style="border-radius: {{ imageRadius }}px"
            >
              {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
              {% if article.image.src != blank %}
                <img
                  class="veda-lazyload {{ _class }}"
                  src="{{ article.image.src | image_url: width: 10 }}"
                  draggable="false"
                  {% if article.title %}
                    alt="{{ article.title }}"
                  {% else %}
                    alt="image"
                  {% endif %}
                  {% if article.image.width %}
                    data-intrinsic-width="{{ article.image.width }}"
                    width="{{ article.image.width }}"
                  {% endif %}
                  {% if article.image.height %}
                    height="{{ article.image.height }}"
                    data-intrinsic-height="{{ article.image.height }}"
                  {% endif %}
                  {% if _style %}
                    style="{{ _style }}"
                  {% endif %}
                  loading="lazy"
                >
              {% else %}
                {% liquid
                  assign pl = 'lifestyle-1'

                  if _placeholder
                    assign pl = _placeholder
                  endif

                  assign placeholder_class = 'veda-placeholder-svg bgc:color-gray2 ' | append: _class

                  if _placeholder_class
                    assign placeholder_class = 'veda-placeholder-svg bgc:color-gray2 ' | append: _placeholder_class
                  endif
                %}
                {{ pl | placeholder_svg_tag: placeholder_class }}
              {% endif %}
              {% comment %}KET_THUC_TACH_FILE{% endcomment %}
            </div>
          {% endif %}
        {% when 'content_article_comment' %}
          {% capture ListComment %}
            <span
              class="d:flex ai:center m:15px_0 fz:pfs(15px,25px) fw:700 c:color-gray9"
              data-css="{{ contentItem.VEDA_styleBox_4 }}"
            >
              <i class="fal fa-comment mr:10px"></i>
              {% if article.comments_count %}
                {{ 'veda.blogs.article.comments.other' | t: count: article.comments_count }}
              {% else %}
                {{ 'veda.blogs.article.comments.other' | t: count: 0 }}
              {% endif %}
            </span>
            {% if article.comments_count > 0 %}
              {% paginate article.comments by 3 %}
                {% for articleCommentItem in article.comments %}
                  <div class="p:20px bdt:1px_solid_color-gray3">
                    <span class="fz:15px fw:700 c:color-gray9" data-css="{{ contentItem.VEDA_styleBox_8 }}">
                      {{ articleCommentItem.author }} - {{ articleCommentItem.updated_at | date: '%b %d, %Y' }}
                    </span>
                    <div class="m:10px_0 fz:15px c:color-gray9 fw:400" data-css="{{ contentItem.VEDA_styleBox_10 }}">
                      {{ articleCommentItem.content }}
                    </div>
                  </div>
                {% endfor %}
                <paginate />
              {% endpaginate %}
            {% endif %}
          {% endcapture %}

          {% capture AddComment %}
            <div
              class="m:20px_0 fz:16px fw:500 c:color-gray9"
              data-css="{{ contentItem.VEDA_styleBox_6 }}"
            >
              {{ 'veda.blogs.article.comment_form_title' | t }}
            </div>
            {% form 'new_comment', article %}
              {% liquid
                assign post_message = 'veda.blogs.article.success' | t

                if blog.moderated and comment.status == 'unapproved'
                  assign post_message = 'veda.blogs.article.success_moderated' | t
                endif
              %}
              {% if builderMode and _test %}
                <div class="d:flex ai:center fz:14px p:10px m:10px_0 bgc:color-success.1 c:color-success">
                  <span><i class="far fa-check-circle mr:10px"></i></span>
                  <div>{{ post_message }}</div>
                </div>
              {% elsif form.posted_successfully? %}
                <div class="d:flex ai:center fz:14px p:10px m:10px_0 bgc:color-success.1 c:color-success">
                  <span><i class="far fa-check-circle mr:10px"></i></span>
                  <div>{{ post_message }}</div>
                </div>
              {% endif %}

              {% if builderMode and _test %}
                <div class="d:flex ai:center fz:14px p:10px m:10px_0 bgc:color-error.1 c:color-error ls:none*ul p:0*ul m:0*ul">
                  <span><i class="far fa-exclamation-circle mr:10px"></i></span>
                  <div class="errors">Form error placeholder</div>
                </div>
              {% elsif form.errors %}
                <div class="d:flex ai:center fz:14px p:10px m:10px_0 bgc:color-error.1 c:color-error ls:none*ul p:0*ul m:0*ul">
                  <span><i class="far fa-exclamation-circle mr:10px"></i></span>
                  {{ form.errors | default_errors }}
                </div>
              {% endif %}

              <div
                {% if blog.moderated == false %}
                  class="article-template__comments-fields"
                {% endif %}
              >
                {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
                <label
                  {% if _container_class %}
                    class="{{ _container_class }}"
                  {% else %}
                    class="d:block mb:15px"
                  {% endif %}
                >
                  <span
                    {% if _label_class %}
                      class="{{ _label_class }}"
                    {% else %}
                      class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px"
                    {% endif %}
                    data-css="{{ contentItem.VEDA_styleBox_12 }}"
                  >
                    {{ 'veda.blogs.article.name' | t }}
                  </span>
                  <input
                    {% if 'maw:450px w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none' %}
                      class="rs {{ 'maw:450px w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none' }}"
                    {% else %}
                      class="rs w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
                    {% endif %}
                    data-css="{{ contentItem.VEDA_styleBox_14 }}"
                    type="{{ 'text' }}"
                    name="{{ 'comment[author]' }}"
                    {% if form.author %}
                      value="{{ form.author }}"
                    {% endif %}
                    {% if _placeholder %}
                      placeholder="{{ _placeholder }}"
                    {% endif %}
                    {% if 'name' %}
                      autocomplete="{{ 'name' }}"
                    {% endif %}
                    {% if _autocorrect %}
                      autocorrect="{{ _autocorrect }}"
                    {% endif %}
                    {% if _autocapitalize %}
                      autocapitalize="{{ _autocapitalize }}"
                    {% endif %}
                  >
                </label>
                {% comment %}KET_THUC_TACH_FILE{% endcomment %}
                {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
                <label
                  {% if _container_class %}
                    class="{{ _container_class }}"
                  {% else %}
                    class="d:block mb:15px"
                  {% endif %}
                >
                  <span
                    {% if _label_class %}
                      class="{{ _label_class }}"
                    {% else %}
                      class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px"
                    {% endif %}
                    data-css="{{ contentItem.VEDA_styleBox_12 }}"
                  >
                    {{ 'veda.blogs.article.email' | t }}
                  </span>
                  <input
                    {% if 'maw:450px w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none' %}
                      class="rs {{ 'maw:450px w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none' }}"
                    {% else %}
                      class="rs w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
                    {% endif %}
                    data-css="{{ contentItem.VEDA_styleBox_14 }}"
                    type="{{ 'email' }}"
                    name="{{ 'comment[email]' }}"
                    {% if form.email %}
                      value="{{ form.email }}"
                    {% endif %}
                    {% if _placeholder %}
                      placeholder="{{ _placeholder }}"
                    {% endif %}
                    {% if 'email' %}
                      autocomplete="{{ 'email' }}"
                    {% endif %}
                    {% if _autocorrect %}
                      autocorrect="{{ _autocorrect }}"
                    {% endif %}
                    {% if _autocapitalize %}
                      autocapitalize="{{ _autocapitalize }}"
                    {% endif %}
                  >
                </label>
                {% comment %}KET_THUC_TACH_FILE{% endcomment %}
                <label class="d:block mb:15px">
                  <span
                    class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px"
                    data-css="{{ contentItem.VEDA_styleBox_12 }}"
                  >
                    {{ 'veda.blogs.article.message' | t }}
                  </span>
                  <textarea
                    rows="5"
                    name="comment[body]"
                    class="rs w:100% bd:1px_solid_color-gray3 p:10px_15px c:color-gray9 c:color-gray5||ph o:none"
                    aria-required="true"
                    required
                    data-css="{{ contentItem.VEDA_styleBox_14 }}"
                  >{{ form.body }}</textarea>
                </label>
              </div>
              {% if blog.moderated? %}
                <div>
                  {{ 'veda.blogs.article.moderated' | t }}
                </div>
              {% endif %}
              {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
              {% liquid
                if contentItem.VEDA_select_4 == 'link'
                  assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
                else
                  assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
                endif

                assign default_for_bottom_class = ''

                case contentItem.VEDA_select_4
                  when 'primary'
                    assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
                  when 'secondary'
                    assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
                  when 'dark'
                    assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
                  when 'gray'
                    assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
                  when 'light'
                    assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
                  else
                    assign variant_class = ' c:color-gray9 c:color-primary|h'
                endcase
              %}

              <button
                type="{{ 'submit' }}"
                component="{{ _component }}"
                {% if 'd:inline-flex jc:center' %}
                  class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'd:inline-flex jc:center' }}"
                {% else %}
                  class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
                {% endif %}
                {% if _data_confirm_message %}
                  data-confirm-message="{{ _data_confirm_message }}"
                {% endif %}
                {% if _data_target %}
                  data-target="{{ _data_target }}"
                {% endif %}
                {% if _aria_label %}
                  aria-label="{{ _aria_label }}"
                {% endif %}
                {% if _data_index %}
                  data-index="{{ _data_index }}"
                {% endif %}
                {% if _data_form_active %}
                  data-form-active="{{ _data_form_active }}"
                {% endif %}
                {% if _form %}
                  form="{{ _form }}"
                {% endif %}
                {% if _name %}
                  name="{{ _name }}"
                {% endif %}
                {% if _id %}
                  id="{{ _id }}"
                {% endif %}
                {% if _tooltip_position %}
                  data-tooltip-position="{{ _tooltip_position }}"
                {% endif %}
                {% if _tooltip_text %}
                  data-tooltip-text="{{ _tooltip_text }}"
                {% endif %}
                {% if _data_button_video_id %}
                  data-button-video-id="{{ _data_button_video_id }}"
                {% endif %}
                data-css="{{ contentItem.VEDA_styleBox_16 }}"
              >
                <span>
                  {{ contentItem.VEDA_text_1 }}
                </span>
              </button>
              {% comment %}KET_THUC_TACH_FILE{% endcomment %}
            {% endform %}
          {% endcapture %}

          {% if blog.comments_enabled? %}
            <div>
              {{ ListComment }}
              {{ AddComment }}
            </div>
          {% endif %}
        {% when 'VEDA_array_2' %}
          {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
          {% liquid
            case contentItem.VEDA_select_5
              when 'square_shadow'
                assign item_variant_class_name = 'd:flex flxg:1 ai:center w:100% p:10px_15px bgc:color-light c:color-gray9 c:color-primary|h bxsh:0_5px_15px_color-gray9.1'
              when 'square_border'
                assign item_variant_class_name = 'd:flex flxg:1 ai:center w:100% p:10px_15px bgc:color-light bd:1px_solid_color-gray3 c:color-gray9 c:color-primary|h'
              when 'rounded_shadow'
                assign item_variant_class_name = 'd:flex flxg:1 ai:center w:100% p:10px_15px bgc:color-light c:color-gray9 c:color-primary|h bxsh:0_5px_15px_color-gray9.1 bdrs:20px'
              when 'rounded_border'
                assign item_variant_class_name = 'd:flex flxg:1 ai:center w:100% p:10px_15px bgc:color-light bd:1px_solid_color-gray3 c:color-gray9 c:color-primary|h bdrs:20px'
              when 'custom'
                assign item_variant_class_name = 'd:flex flxg:1 ai:center w:100% p:5px_0'
              else
                assign item_variant_class_name = 'd:flex flxg:1 ai:center w:100% p:5px_0'
            endcase
          %}
          {% if blog.previous_article != null and blog.next_article != null %}
            <div
              class="d:flex mt:30px pt:15px pb:15px bdt:1px_solid_color-gray3 bdb:1px_solid_color-gray3"
              data-css="{{ contentItem.VEDA_styleBox_22 }}"
              component="{{ 'content_article' }}"
            >
              {% if blog.previous_article != null %}
                {% liquid
                  assign border_button = ''

                  if blog.previous_article != null and blog.next_article != null
                    assign border_button = ' bdr:1px_solid_color-gray3'
                  endif
                %}
                <a
                  href="{{ blog.previous_article.url }}"
                  class="trs:0.3s w:50% {{ border_button }} {{ item_variant_class_name }}"
                  data-css="{{ contentItem.VEDA_styleBox_20 }}"
                >
                  <span class="fz:20px">
                    {{ contentItem.VEDA_icon_1 }}
                  </span>
                  <div class="ml:20px">
                    <div
                      class="tt:uppercase ff:font-secondary fz:15px fw:500 mb:1px@lg"
                      data-css="{{ contentItem.VEDA_styleBox_18 }}"
                    >
                      {{ contentItem.VEDA_text_2 }}
                    </div>
                    <div class="d:none d:block@md">
                      {{ blog.previous_article.title }}
                    </div>
                  </div>
                </a>
              {% endif %}
              {% if blog.next_article != null %}
                <a
                  href="{{ blog.next_article.url }}"
                  class="trs:0.3s w:50% jc:flex-end {{ item_variant_class_name }}"
                  data-css="{{ contentItem.VEDA_styleBox_20 }}"
                >
                  <div class="mr:20px ta:right">
                    <div
                      class="tt:uppercase ff:font-secondary fz:15px fw:500 mb:1px@lg"
                      data-css="{{ contentItem.VEDA_styleBox_18 }}"
                    >
                      {{ contentItem.VEDA_text_3 }}
                    </div>
                    <div class="d:none d:block@md">
                      {{ blog.next_article.title }}
                    </div>
                  </div>
                  <span class="fz:20px">
                    {{ contentItem.VEDA_icon_2 }}
                  </span>
                </a>
              {% endif %}
            </div>
          {% endif %}
          {% comment %}KET_THUC_TACH_FILE{% endcomment %}
        {% when 'content_article_share' %}
          <div class="d:flex ai:center mt:20px">
            {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
            {% liquid
              assign gap = 10

              if _gap
                assign gap = _gap | divided_by: 2
              endif
            %}

            <div class="d:flex fxw:wrap ai:center" style="margin-left: -{{ gap }}px; margin-right: -{{ gap }}px">
              {% liquid
                assign share_arr = contentItem.VEDA_tags_1 | split: ','
              %}
              {% for item in share_arr %}
                {% case item %}
                  {% when 'facebook' %}
                    <a
                      target="_blank"
                      href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url | append: article.url }}"
                      component="{{ _component }}"
                    >
                      <span
                        class="fz:16px c:color-gray9 trf:translateY(-5px)|h trs:0.3s"
                        style="padding-left: {{ gap }}px; padding-right: {{ gap }}px;"
                        data-css="{{ contentItem.VEDA_styleBox_2 }}"
                        {% if _tooltip_position %}
                          data-tooltip-position="{{ _tooltip_position }}"
                        {% else %}
                          data-tooltip-position="top"
                        {% endif %}
                        data-tooltip-text="{{ 'veda.general.social.alt_text.share_on_facebook' | t }}"
                      >
                        <i class="fab fa-facebook"></i>
                      </span>
                    </a>
                  {% when 'twitter' %}
                    <a
                      target="_blank"
                      href="https://twitter.com/intent/tweet?url={{ shop.url | append: article.url }}"
                      component="{{ _component }}"
                    >
                      <span
                        class="fz:16px c:color-gray9 trf:translateY(-5px)|h trs:0.3s"
                        style="padding-left: {{ gap }}px; padding-right: {{ gap }}px;"
                        data-css="{{ contentItem.VEDA_styleBox_2 }}"
                        {% if _tooltip_position %}
                          data-tooltip-position="{{ _tooltip_position }}"
                        {% else %}
                          data-tooltip-position="top"
                        {% endif %}
                        data-tooltip-text="{{ 'veda.general.social.alt_text.share_on_twitter' | t }}"
                      >
                        <i class="fab fa-twitter"></i>
                      </span>
                    </a>
                  {% when 'messenger' %}
                    <a
                      target="_blank"
