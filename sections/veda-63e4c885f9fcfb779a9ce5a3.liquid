                    src="{{ imageItem.src | image_url: width: 10 }}"
                    alt="{{ variantItem.title }}"
                    width="{{ imageItem.width }}"
                    height="{{ imageItem.height }}"
                    data-intrinsic-width="{{ imageItem.width }}"
                    data-intrinsic-height="{{ imageItem.height }}"
                    loading="lazy"
