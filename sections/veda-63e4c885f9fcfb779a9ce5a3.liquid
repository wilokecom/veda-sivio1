                centeredSlides: false,
                autoHeight: true,
              }
            "
          >
            <div class="swiper">
              <div class="swiper-wrapper">
                {% for variantItem in current_product.variants %}
                  {% liquid
                    if variantItem.featured_image.src != blank
                      assign imageItem = variantItem.featured_image
                    elsif variantItem.image.src != blank
                      assign imageItem = variantItem.image
                    else
                      assign imageItem = current_product.images[forloop.index0]
                    endif

                    if imageItem.src != blank
                      assign classImage = 'swiper-slide veda-image-zoom w:100% h:auto'
                    else
                      assign classImage = 'swiper-slide w:100% h:auto'
                    endif
