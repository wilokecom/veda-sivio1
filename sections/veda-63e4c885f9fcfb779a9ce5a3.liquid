        {% comment %}BAT_DAU_TACH_FILE{% endcomment %}
        {% liquid
          assign image_length = current_product.images | size

          assign variants_length = current_product.variants | size

          assign gap = 10

          if section.settings.product_media___gap
            assign gap = section.settings.product_media___gap
          endif
        %}
