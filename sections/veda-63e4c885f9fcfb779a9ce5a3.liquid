          <div class="pos:relative w:100% z:1">
            {% liquid
              assign imageItem = current_product.featured_image

              if imageItem.src != blank
                assign classImage = 'veda-photo-swipe veda-image-zoom w:100% h:auto'
              else
                assign classImage = 'w:100% h:auto'
              endif
            %}
