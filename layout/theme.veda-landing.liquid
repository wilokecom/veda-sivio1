{% comment %}
You SHOULD NOT modify source code in this page because
It is automatically generated from Veda.
{% endcomment %}
{% assign locale_rtl = "ar,fa,he,ks,ps,sd,ur," %}
{% assign current_locale = localization.language.iso_code | append: ',' %}
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}" {% if locale_rtl contains current_locale %}dir="rtl"{% endif %}>
<head>
    <!--VEDA_ROCKET_LOADER--><script src="{{ 'veda-rocket-loader.js' | asset_url }}" defer></script><!--END_VEDA_ROCKET_LOADER-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- unless settings.type_header_font.system? -%}
        <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    {%- if settings.favicon != blank -%}
        <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ shop.name }}</title>

    {%- if page_description -%}
        <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    {{ content_for_header }}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>


    {% comment %} Fera addon {% endcomment %}
    {%- liquid
        capture  fedaScript
            render 'banana-stand-footer'
        endcapture

        unless  fedaScript contains 'Liquid error'
            echo fedaScript
        endunless
    %}

    <!--VEDA_HEADER_SCRIPTS_POSITION-->
    {% render 'veda-header-scripts' %}
    <!--VEDA_NO_PLACEMENT_ADDON_POSITION-->
    {% render 'veda-no-placement-addons' %}
</head>
<body>
<div id="veda-root" style="opacity: 0" class="veda-container">
    {{ content_for_layout }}
    <!--VEDA_FOOTER_SCRIPTS_POSITION-->
    {% render 'veda-footer-scripts' %}

    <!--BEFORE_CLOSE_VEDA_ROOT-->
</div><!--End of #veda-root-->
</body>
</html>